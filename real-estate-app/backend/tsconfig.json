{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",                   // ✅ ESM-compatible
    "moduleResolution": "NodeNext",         // ✅ Required for ESM
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": false,               // ❌ Turn this OFF for pure ESM
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"]
}
